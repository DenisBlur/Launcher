<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/llAudioControl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:maxWidth="400dp"
    android:orientation="vertical">

    <com.gibbonstudio.myapplication.Views.MediaControl.MediaControlView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/mpvMain"
        android:layout_marginBottom="16dp" />

    <com.gibbonstudio.myapplication.Views.MediaControl.MediaPlayerView
        android:layout_alignParentBottom="true"
        android:id="@+id/mpvMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true" />

</RelativeLayout>